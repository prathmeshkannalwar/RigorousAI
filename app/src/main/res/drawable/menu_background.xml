<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!--
    This is the same linear gradient used for your "2.0" text.
    - angle="0" makes it go from left to right.
    - The colors are the same blue, purple, and red.
    -->
    <gradient
        android:angle="0"
        android:endColor="#D96570"
        android:centerColor="#9B72CF"
        android:startColor="#4285F4"
        android:type="linear" />

    <!-- Rounded corners for a modern, soft look. -->
    <corners android:radius="74dp" />

</shape>